@using FirstTaskEntities.Models;

@{
	ViewBag.Title = "Home Page";
}

<div style="margin: 60px 0px">
	<h1>Общий список услуг</h1>

	<div class="content-block">
		@foreach (var service in ViewBag.Model)
		{
			<div class="content-item">
				<p>@service.Name &trade;</p>
				<p>@service.Code</p>
				<div class="control-panel">
					<button type="button" data-toggle="modal" data-target="#addService">Добавление</button>
					<button type="button" data-toggle="modal" data-target="#editService">Редактирование</button>
					<button type="button" data-toggle="modal" data-target="#deleteService">Удаление</button>
				</div>


				<!-- Modal -->
				<div class="modal fade" id="addService" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<div class="flex-box">
									<p>Название: </p>
									<input type="text" name="name" value="@service.Name" />
								</div>
								<div class="flex-box">
									<p>Код: </p>
									<input type="text" name="bin" value="@service.Code" />
								</div>
								<div class="flex-box">
									<p>Цена: </p>
									<input type="text" name="name" value="@service.Price" />
								</div>
								<div class="flex-box">
									<p>Старт: </p>
									<input type="text" name="date" value="@service.DateOfBegin.ToShortDateString()" />
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
								<button type="button" class="btn btn-primary" id="btnAddService">Save changes</button>
							</div>
						</div>
					</div>
				</div>

				<div class="modal fade" id="editService" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								Редактирование
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
								<button type="button" class="btn btn-primary">Save changes</button>
							</div>
						</div>
					</div>
				</div>
				<!-- Modal -->
			</div>
		}
	</div>

	<div class="page-helper">
		@for (int i = 1; i <= ViewBag.PagesCount; i++)
		{
			<a href="/Home/Index/?page=@i">
				<div>
					@i
				</div>
			</a>
		}
	</div>
</div>